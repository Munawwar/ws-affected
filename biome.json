{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach":"off"
			}
		}
	},
	"formatter": {
    "indentStyle": "space",
		"lineWidth": 100
  },
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
